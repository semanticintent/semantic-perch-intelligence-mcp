{
  "name": "@semanticintent/semantic-perch-intelligence-mcp",
  "version": "2.0.0",
  "description": "PerchIQX - Deep database intelligence for Cloudflare D1 via MCP. Reference implementation of Semantic Intent patterns.",
  "keywords": [
    "mcp",
    "semantic-intent",
    "d1-database",
    "cloudflare",
    "database-introspection",
    "schema-analysis",
    "semantic-anchoring",
    "hexagonal-architecture",
    "perch-intelligence"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/semanticintent/semantic-perch-intelligence-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/semanticintent/semantic-perch-intelligence-mcp/issues"
  },
  "homepage": "https://github.com/semanticintent/semantic-perch-intelligence-mcp#readme",
  "author": "semanticintent",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
